<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/public/style.css">
</head>
<body>
    <header id="user">
        <a href="/home">HOME</a>
    </header>
    <main>
        <div>
            <h1 id="ongoing" >Current Events</h1>
                <%events.forEach(function(event) { %>
                <b>Name:</b> <%=event.name %> <b>|</b> <%= event.date %> <br>
                <h4>Description: <%= event.description %></h4>
            <% }); %>
        </div>
    </main>
    <form id="user-form" action="/submit" method="POST">
        <fieldset>
            <legend>Register:</legend>
            <label for="fname">First name:</label>
            <input type="text" id="fname" name="fname" required><br><br>
            <label for="lname">Last name:</label>
            <input type="text" id="lname" name="lname" required><br><br>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required><br><br>
            <label for="events">Event:</label> <br><br>
            <%events.forEach(function(event) { %> 
                <input type="checkbox" id="events" name="event" value="<%=event.name %>">
                <label for="event"><%=event.name %></label><br><br><br>
            <% }); %>
            <input class="submit" type="submit" value="Submit">
        </fieldset>
    </form>
</body>
</html>