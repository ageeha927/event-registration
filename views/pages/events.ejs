<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events</title>
</head>
<body>
    <header>
        <a href="/">Events</a>
        <a href="/admin">Admin</a>
    </header>
    <main>
        <div>
            <h1>Current Events</h1>
            <%events.forEach(function(event) { %>
            <em>Name:</em> <%=event.name %> <br>
            <ul>
                <li>
                    <em>Date:</em> <%= event.date %>
                </li>
                <li>
                    <em>Description:</em> <%= event.description %>
                </li>
            </ul>
            <div class="task-buttons">
                <button class="edit-button"><a href="/edit/<%= event.id %>/edit">Edit</a></button>
                <form action="/edit/<%= event.id %>/delete" method="POST" style="display:inline;">
                    <button class="delete-button" type="submit">Delete</button>
                </form>
            </div>
            <% }); %>
        </div>
    </main>
    <form action="/submit">
        <fieldset>
            <legend>Register:</legend>
            <label for="fname">First name:</label>
            <input type="text" id="fname" name="fname" required><br><br>
            <label for="lname">Last name:</label>
            <input type="text" id="lname" name="lname" required><br><br>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required><br><br>
            <label for="events">Event:</label> <br><br>
            <%events.forEach(function(event) { %> 
                <input type="checkbox" id="events" name="event1" value="event">
                <label for="event"><%=event.name %></label><br><br><br>
            <% }); %>
            <input type="submit" value="Submit">
        </fieldset>
    </form>
</body>
</html>